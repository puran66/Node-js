<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>EJS Crud </title>
  <!-- Include Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
  <div class="container mx-auto px-4">
    <h1 class="text-2xl font-bold my-4">Bike Table</h1>
    <table id="test-table" class="w-full mt-4">
      <thead>
        <tr class="mb-4">
          <th class="px-4 py-2">Company</th>
          <th class="px-4 py-2">Model</th>
          <th class="px-4 py-2">Milage</th>
          <th class="px-4 py-2"></th>
        </tr>
      </thead>
      <tfoot></tfoot>
      <tbody>
        <tr>
          <form action="/v1/add" method="post">
            <td><input type="text" placeholder="Enter Company"
                class="px-4 py-2 border-2 border-black rounded-lg p-4 w-full" name="company">
            </td>
            <td><input type="text" placeholder="Enter Model"
                class="px-4 py-2 border-2 border-black rounded-lg p-4 w-full" name="model"></td>
            <td><input type="text" placeholder="Enter Milage"
                class="px-4 py-2 border-2 border-black rounded-lg p-4 w-full" name="milage">
            </td>
            <td>
              <button class="button bg-green-500 text-white px-4 py-2 rounded-md"><i
                  class="fa fa-check-circle"></i>Submit</button>
            </td>
          </form>
        </tr>
        <% data.forEach(item=> { %>
          <tr class="border-b-2 border-black rounded-lg p-4">
            <td class="py-4 px-3">
              <%=item.company %>
            </td>
            <td class="py-4 px-3">
              <%=item.model %>
            </td>
            <td class="py-4 px-3">
              <%=item.milage %>
            </td>
            <td class="py-4 px-3">
              <form action="/v1/delete/<%= item._id  %>">
                <button class="button bg-red-500 text-white px-4 py-2 rounded-md"><i
                    class="fa fa-trash-o">Delete</i></button>
              </form>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</body>

</html>